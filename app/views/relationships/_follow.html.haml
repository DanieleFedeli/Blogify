-if !current_user
  =link_to new_user_session_path, title: 'You need to be logged' do
    %btn.btn.btn-outline-info
      Follow
-else
  =form_for(current_user.active_relationships.build,remote: true) do |f|
    = hidden_field_tag :followed_id, @user.id
    = f.submit "Follow", class: "btn btn-outline-info"