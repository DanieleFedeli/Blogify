.container.post_container.main-div.mx-auto.my-5
  .row.title_container.my-2
    %h3.mx-auto
      =link_to @pending_post.title, post_path(@pending_post.id)
  .row.tag_continer.border-bottom.pb-2
    .col-6.text-left
      Autore:
      =link_to @pending_post.user.username, @pending_post.user
    .col-6.text-right
      Inviato il 
      =@pending_post.created_at.strftime("%d %m %Y")
  .row.tag_container.text-center
    Tags: 
    =raw @pending_post.tag_list.map{ |t| link_to t, tag_path(t), class: 'badge badge-light badge-tags' }.join(" ")
  .row.body_container
    .col-lg-12
      =raw @pending_post.body