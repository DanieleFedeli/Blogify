.container-fluid#centerdiv

  .row
    .col-lg-12.col-md-12.col-sm-12.login-form
      .panel
        .container.text-center
          - flash.each do |key, value|
            %div{:class => "alert alert-#{key}"}
              = value
        %h2 Sign in utente
        %p Inserisci la tua email e password
      = form_for(resource, as: resource_name, url: session_path(resource_name), html: {id: 'Login'}) do |f| 
        .form-group
          =f.email_field :email, autofocus: true, autocomplete: "email", id: "inputEmail", class: "form-control", placeholder: "Email Address"
        .form-group
          =f.password_field :password, autocomplete: 'off', id: 'inputPassword', class: 'form-control', placeholder: "Password"
        - if devise_mapping.rememberable?
          .field
            = f.check_box :remember_me
            = f.label :remember_me
        =f.submit 'Login', class: 'btn btn-primary'
      = render "users/shared/links"