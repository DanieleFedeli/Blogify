
#mySidenav.sidenav.navbar-dark
  %a.closebtn{href: 'javascript:void(0)', onclick: 'closeNav();'}
    &times;
  %h3.text-light.text-center
    Most used tag
  #tag_cloud
    - tag_cloud Post.tag_counts, %w{s m l} do |tag, css_class|
      =link_to tag.name, tag_path(tag.name), class: css_class

:javascript
  
  /* Set the width of the side navigation to 250px and the left margin of the page content to 250px and add a black background color to body */
  function openNav() {
    document.getElementById("mySidenav").style.width = "300px";
    document.getElementById("main").style.marginLeft = "300px";
    document.getElementById("top-nav").style.marginLeft = "300px";
    $('.overlay').show();
    $('.overlay').css('opacity', 0.7);
    $('#top-nav').removeClass('navbar-light bg-light');
    $('#top-nav').addClass('navbar-dark bg-dark');
    $('#brand').css('color', "white");
  }

  /* Set the width of the side navigation to 0 and the left margin of the page content to 0, and the background color of body to white */
  function closeNav() {
    document.getElementById("mySidenav").style.width = "0";
    document.getElementById("main").style.marginLeft = "0";
    document.getElementById("top-nav").style.marginLeft = "0";
    $('.overlay').hide();
    $('#top-nav').addClass('navbar-light bg-light');
    $('#top-nav').removeClass('navbar-dark bg-dark');
    $('#brand').css('color', "black");
  }

  $(document).ready(function(){
    $('.overlay').hide();
    
  })
